PORT=3000

# FIREBASE: usa una de las dos opciones
# Opción A: JSON string (recomendado para Vercel)
# Copia aquí el JSON de tu service account (o guarda en Vercel env var FIREBASE_SERVICE_ACCOUNT)
FIREBASE_SERVICE_ACCOUNT='{"type": "...", "project_id": "...", "private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n", "client_email":"...","client_id":"..."}'

# Opción B: ruta al archivo local (solo para desarrollo local)
# FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# Clave maestra para cifrar secrets (32 bytes -> 64 hex chars)
BACKEND_SECRET_HEX=put_your_64_hex_chars_here

# Base URL de Binance (opcional)
BINANCE_BASE_URL=https://api.binance.com